{
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":automergeMinor",
    ":dependencyDashboard",
    ":semanticCommits",
    ":pinVersions",
    ":scheduleMonthly"
  ],
  "enabledManagers": [
    "pre-commit",
    "github-actions",
    "pep621",
    "devcontainer"
  ],
  "packageRules": [
    {
      "managers": ["pre-commit"],
      "groupName": "pre-commit hook updates"
    }
  ],
  "labels": ["dependencies", "renovate"],
  "timezone": "Asia/Dubai",
  "schedule": [
    "0 9 * * 1-5"
  ]
}
