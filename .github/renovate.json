{
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":automergeMinor",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "enabledManagers": [
    "pre-commit",
    "github-actions",
    "pep621"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "pre-commit hook updates"
    }
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "timezone": "Asia/Dubai",
  "schedule": [
    "before 10am on tuesday"
  ]
}
